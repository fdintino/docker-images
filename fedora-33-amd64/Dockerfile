FROM fedora:33

RUN dnf install -y \
    cmake \
    freetype-devel \
    fribidi-devel \
    gcc \
    harfbuzz-devel \
    lcms2-devel \
    libaom-devel \
    libdav1d-devel \
    libimagequant-devel \
    libjpeg-devel \
    libraqm-devel \
    libtiff-devel \
    libwebp-devel \
    make \
    nasm \
    ninja-build \
    openjpeg2-devel \
    python3-devel \
    python3-tkinter \
    python3-virtualenv \
    rav1e-devel \
    redhat-rpm-config \
    tcl-devel \
    tk-devel \
    which \
    xorg-x11-server-Xvfb \
    zlib-devel \
    && dnf clean all

RUN useradd pillow \
    && chown pillow:pillow /home/pillow

RUN virtualenv -p /usr/bin/python3.9 --system-site-packages /vpy3 \
    && /vpy3/bin/pip install --no-cache-dir --upgrade pip \
    && /vpy3/bin/pip install --no-cache-dir --upgrade setuptools>=49.3.2 \
    && /vpy3/bin/pip install --no-cache-dir cffi olefile pytest pytest-cov pytest-timeout \
    && /vpy3/bin/pip install --no-cache-dir numpy --only-binary=:all: || true \
    && chown -R pillow:pillow /vpy3

ADD depends /depends

RUN cd /depends && ./install_libavif.sh

USER pillow
CMD ["depends/test.sh"]

#docker run -v $GITHUB_WORKSPACE:/Pillow pythonpillow/fedora-33-amd64
